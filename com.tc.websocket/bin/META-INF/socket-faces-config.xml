<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
                              "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config>

	<lifecycle>
		<phase-listener>com.tc.websocket.jsf.XocketsPhaseListener</phase-listener>
	</lifecycle>

	<application>
		<variable-resolver>com.tc.websocket.jsf.GuiceVariableResolver</variable-resolver>
	</application>
	
	<managed-bean>
		<managed-bean-name>websocketBean</managed-bean-name>
		<managed-bean-class>com.tc.websocket.jsf.WebSocketBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	
	
</faces-config>
